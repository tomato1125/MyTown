<div class="myPage", style="background-image: url(<%= asset_path "TopPageImage.jpg" %>);">
  <div class="myPageMain">
    <div class="myPageBox">
      <div class="myPageBoxForm">
        <div class='myPageBoxInformation'>
          <div class="myPageBoxInformation-Image">
            <% if @user.image.url.present? %>
              <div class='image' style="background-image: url(<%= @user.image %>);">
              </div>
            <% else %>
              <div class="NoImage">
                <i class="fas fa-user-alt"></i>
                <p>No Image</p>
              </div>
            <% end %>
          </div>
          <%# <i class="fas fa-user"></i> %>
          <span class='myPageBoxInformation-Name'>
            <%= @name %> さんのマイページ
          </span>
          <% if user_signed_in? && current_user.id == @user.id %>
            <%= link_to 'マイページ編集', edit_user_registration_path(current_user), class: "MypageEdit", method: :get %>
          <% end %>

          <% unless current_user == @user %>
            <% if current_user.following?(@user) %>
              <p class="FollowingMessage">フォロー済み</p>
              <%= form_with model: @relationship, url:relationship_path, method: :delete, local: true do |f| %>
                <%= f.hidden_field :follow_id, value: @user.id %>
                <%= f.submit value="フォローを解除する", class: "Rerationship-Off" %>
              <% end %>
            <% else %>
              <%= form_with model: @set_relationship, url:relationships_path, local: true do |f| %>
                <%= f.hidden_field :follow_id, value: @user.id %>
                <%= f.submit name="フォローする", class: "Rerationship-On" %>
              <% end %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
    <div class="container">
      <ul class='user-nav-bar'>
        <li>
          <a href="#" id="top", class='user-nav active'>
            TOP
          </a>
        </li>
        <li>
          <a href="#" id="post", class='user-nav'>
            POST
          </a>
        </li>
        <li>
          <a href="#" id="favorite", class='user-nav'>
            Favorite
          </a>
        </li>
      </ul>
      <ul class="pages">
        <li class="page show">
          <div class="top-page">
            <div class="top-page__introduce">
              <span class="top-page-title">
                introduce
              </span>
              <div class="top-page__introduce__sentence">
                <%= @introduce %>
              </div>
            </div>
            <div class="top-page__status">
              <span class="top-page-title">
                status
              </span>
              <div class="top-page__status__sentence">
                <ul class="top-page__status__sentence__contents">
                  <li class="top-page__status__sentence__contents__content">
                    Prefecture： 
                  </li>
                  <li class="top-page__status__sentence__contents__content">
                    <a class="Follows", id="FollowModal-open">Follow</a>
                  </li>
                  <li class="top-page__status__sentence__contents__content">
                    Follower
                  </li>
                  <li class="top-page__status__sentence__contents__content">
                    Post:
                  </li>
                  <li class="top-page__status__sentence__contents__content">
                    Bookmark: 
                  </li>
                </ul>
                <ul class="top-page__status__sentence__counts">
                  <li class="top-page__status__sentence__counts__content">
                    <%= @prefecture %>
                  </li>
                  <li class="top-page__status__sentence__counts__content">
                    <%= @user.followings.count %> 人
                  </li>
                  <li class="top-page__status__sentence__counts__content">
                    <%= @user.followers.count %> 人
                  </li>
                  <li class="top-page__status__sentence__counts__content">
                    <%= @posts.length %> 件
                  </li>
                  <li class="top-page__status__sentence__counts__content">
                    <%= @user.cliped_posts.length %> 件
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </li>
        <li class="page">
          <% if @posts.length == 0 %>
            <div class="post-page__sentence">
              投稿がまだありません。
            </div>
          <% else %>
            <div class="userPostIndex">
              <div class="userPostIndex__postCount">
                POST :  <%= @posts.length %> 件
              </div>
              <% @posts.first(5).each do |post| %>
                <div class='mypage-NewPost'>
                <%= link_to '', post_path(post.id), class: "showlink", method: :get %>
                  <div class="CategoryPostTitle">
                    <span>~ <%= post.title %> ~</span>
                    <i class="far fa-clock"></i>
                    <span class="postTime"><%= time_ago_in_words(post.created_at) %>前</span>
                  </div>
                  <div class='CategoryPostImage' style="background-image: url(<%= post.images[0].image %>);">
        
                    <div class="CategoryAreaInfomation">
                      <div class="CategoryAreaIcon">
                        <i class="fas fa-map-marker-alt"></i>
                      </div>
                      <div class="CategoryAreaName">
                        <%= post.prefecture.name if post.prefecture_id? %>
                      </div>
                    </div>
                    <div class="CateogryIndexFavorite">
                      <i class="far fa-bookmark"></i>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </li>
        <li class="page">
          <% if @user.cliped_posts.length == 0 %>
            <div class="post-page__sentence">
              Bookmarkした投稿がまだありません。
            </div>
          <% else %>
            <div class="userPostIndex">
              <div class="userPostIndex__postCount">
                Bookmark :  <%= @user.cliped_posts.length %> 件
              </div>
              <% @user.cliped_posts.each do |post| %>
                <div class='mypage-NewPost'>
                <%= link_to '', post_path(post.id), class: "showlink", method: :get %>
                  <div class='IndexUserInfomation'>
                    <div class='IndexUserInfomation__userAvater'>
                      <%= image_tag post.user.image.url, class: "avater" %>
                      <%# <i class="fas fa-user-circle"></i> %>
                    </div>
                    <span class='IndexUserInfomation__username'>
                      <a href="/users/<%= post.user.id %>">
                        <%= post.user.name %>
                      </a>
                    </span>
                    <div class='IndexUserInfomation__date'>
                      <i class="far fa-clock"></i>
                      <span><%= time_ago_in_words(post.created_at) %>前</span>
                    </div>
                  </div>
                  <div class="CategoryPostTitle">
                    <span>~ <%= post.title %> ~</span>
                  </div>
                  <div class='CategoryPostImage' style="background-image: url(<%= post.images[0].image %>);">
                    <div class="CategoryAreaInfomation">
                      <div class="CategoryAreaIcon">
                        <i class="fas fa-map-marker-alt"></i>
                      </div>
                      <div class="CategoryAreaName">
                        <%= post.prefecture.name if post.prefecture_id? %>
                      </div>
                    </div>
                    <div class="CategoryIndexFavorite">
                      <i class="far fa-bookmark"></i>
                      <%= post.clips.count %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<%# followのモーダル画面 %>
<div id="FollowModal-main">
  <div class="FollowModalTop">
    <p><%= @name %> さんのフォロー・フォロワー</p>
  </div>
  <ul class='follow-nav-bar'>
    <li>
      <a href="#" id="top", class='follow-nav active'>
        Follow
      </a>
    </li>
    <li>
      <a href="#" id="post", class='follow-nav'>
        Follower
      </a>
    </li>
  </ul>
  <ul class="pages">
    <li class="FollowPage show">
      <% @follow_users.each do |user| %>
        <div class="Follow-info">
        <%= link_to '', user_path(user.id), class: "followslink", method: :get %>
          <div class="Follow-info__leftSide">
            <div class="Follow-info__leftSide__Image">
            <% if @user.image.url.present? %>
              <div class='image' style="background-image: url(<%= user.image %>);">
              </div>
            <% else %>
              <div class="NoImage">
                <i class="fas fa-user-alt"></i>
                <p>No Image</p>
              </div>
            <% end %>
            </div>
            <div class="Follow-info__leftSide__FollowDetail">
              <div class="Follow-info__leftSide__FollowDetail__username">
                <p><%= link_to user.name, "/users/#{user.id}", class:"Follow-info__leftSide__FollowDetail__username__name" %></p>
              </div>
              <div class="Follow-info__leftSide__FollowDetail__Prefecture">
                <p><%= user.prefecture.name %></p>
              </div>
              <div class="Follow-info__leftSide__FollowDetail__Introduce">
                <p><%= user.introduce %></p>
              </div>
            </div>
          </div>
          <div class="Follow-info__rightSide">
            <% unless current_user == user %>
              <% if current_user.following?(user) %>
                <%= form_with model: @relationship, url:relationship_path, method: :delete, local: true do |f| %>
                  <%= f.hidden_field :follow_id, value: user.id %>
                  <%= f.submit value="フォローを解除する", class: "Follow-info__rightSide__Rerationship-Off" %>
                <% end %>
              <% else %>
                <%= form_with model: @set_relationship, url:relationships_path, local: true do |f| %>
                  <%= f.hidden_field :follow_id, value: user.id %>
                  <%= f.submit name="フォローする", class: "Follow-info__rightSide__Rerationship-On" %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </li>
    <li class="FollowPage">
      <div class="Follow-info">
        <div class="top-page__introduce">
          <span class="top-page-title">
            follower
          </span>
          <div class="top-page__introduce__sentence">
            <%= @introduce %>
          </div>
        </div>
        <div class="top-page__status">
          <span class="top-page-title">
            status
          </span>
        </div>
      </div>
    </li>
  </ul>
</div>
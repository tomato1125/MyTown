<!DOCTYPE html>
<html>
  <head>
    <title>MyTown</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <div class="header__ber">
        <%= link_to image_tag("myTown4.jpg", class: "logo"), "/" %>
        <% if user_signed_in? %>
          <div class="user_nav_menu">
            ログイン名: <span><%= current_user.name %></span>
            <%= link_to "マイページ", "/users/#{current_user.id}", class:"link" %>
            <%= link_to "ログアウト", destroy_user_session_path, class:"link", method: :delete %>
            <%= link_to  "投稿する", new_post_path, class: "link" %>
          </div>
        <% else %>
          <div class="user_nav_login">
            <%= link_to "ログイン", new_user_session_path, class: 'post' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
          </div>
        <% end %>
      </div>
      <div class="icon">
        <i class="fas fa-user"></i>
        <i class="fas fa-bell"></i>
      </div>
    </header>
    <%= yield %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDmv1pwJDbQBm2zCU5YOV2hNw41U5zjjsU&callback=initMap" async defer></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  </body>
</html>
